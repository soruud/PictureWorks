<Window x:Class="PictureWorks.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About PictureWorks" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="PictureWorks v1.1.4" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,15"
                   Foreground="{DynamicResource TextColor}"/>
        
        <TextBlock Grid.Row="1" Text="A Windows desktop application for image editing." 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="{DynamicResource TextColor}"/>
        
        <TextBlock Grid.Row="2" Text="Created by:" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,5"
                   Foreground="{DynamicResource TextColor}"/>
        
        <TextBlock Grid.Row="3" Text="Stig Ove K. Ruud&#x0a;Email: soruud@gmail.com" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   TextAlignment="Center"
                   Foreground="{DynamicResource TextColor}"/>
        
        <StackPanel Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Support this project:" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"
                       Foreground="{DynamicResource TextColor}"/>
            <Button x:Name="BtnPayPal" Click="BtnPayPal_Click" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Padding="5"
                    ToolTip="Click to donate via PayPal">
                <Image Source="pack://application:,,,/PayPal_Logo_Alternative_1.png" 
                       Width="120" 
                       Height="Auto"
                       Stretch="Uniform"/>
            </Button>
        </StackPanel>
        
        <Button Grid.Row="5" Content="Close" 
                Click="BtnClose_Click" 
                Width="80" 
                Height="30"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Style="{StaticResource ModernButton}"/>
    </Grid>
</Window>

